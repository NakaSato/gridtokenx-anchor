{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["scripts/**/*", "tests/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "target"]
}
