{
    "family": "gridtokenx-solana",
    "networkMode": "host",
    "requiresCompatibilities": [
        "EC2"
    ],
    "executionRoleArn": "${EXECUTION_ROLE_ARN}",
    "taskRoleArn": "${TASK_ROLE_ARN}",
    "containerDefinitions": [
        {
            "name": "solana-validator",
            "image": "${ECR_REPO_URI}:latest",
            "essential": true,
            "memory": 500000,
            "cpu": 61440,
            "portMappings": [
                {
                    "containerPort": 8899,
                    "hostPort": 8899,
                    "protocol": "tcp",
                    "name": "rpc"
                },
                {
                    "containerPort": 8900,
                    "hostPort": 8900,
                    "protocol": "tcp",
                    "name": "rpc-pubsub"
                },
                {
                    "containerPort": 9900,
                    "hostPort": 9900,
                    "protocol": "tcp",
                    "name": "faucet"
                },
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp",
                    "name": "gossip"
                },
                {
                    "containerPort": 8001,
                    "hostPort": 8001,
                    "protocol": "udp",
                    "name": "tpu"
                }
            ],
            "environment": [
                {
                    "name": "RUST_LOG",
                    "value": "solana_runtime::message_processor=info"
                },
                {
                    "name": "ACCOUNTS_DIR",
                    "value": "/data/accounts"
                },
                {
                    "name": "LEDGER_DIR",
                    "value": "/data/ledger"
                },
                {
                    "name": "SNAPSHOTS_DIR",
                    "value": "/data/snapshots"
                },
                {
                    "name": "RPC_PORT",
                    "value": "8899"
                }
            ],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8899 -X POST -H 'Content-Type: application/json' -d '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"getHealth\"}' || exit 1"
                ],
                "interval": 30,
                "timeout": 10,
                "retries": 5,
                "startPeriod": 300
            },
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/gridtokenx-solana",
                    "awslogs-region": "${AWS_REGION}",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "mountPoints": [
                {
                    "sourceVolume": "solana-accounts",
                    "containerPath": "/data/accounts",
                    "readOnly": false
                },
                {
                    "sourceVolume": "solana-ledger",
                    "containerPath": "/data/ledger",
                    "readOnly": false
                },
                {
                    "sourceVolume": "solana-snapshots",
                    "containerPath": "/data/snapshots",
                    "readOnly": false
                }
            ],
            "ulimits": [
                {
                    "name": "nofile",
                    "softLimit": 1000000,
                    "hardLimit": 1000000
                }
            ],
            "linuxParameters": {
                "maxSwap": 0,
                "swappiness": 0
            }
        }
    ],
    "volumes": [
        {
            "name": "solana-accounts",
            "host": {
                "sourcePath": "/data/accounts"
            }
        },
        {
            "name": "solana-ledger",
            "host": {
                "sourcePath": "/data/ledger"
            }
        },
        {
            "name": "solana-snapshots",
            "host": {
                "sourcePath": "/data/snapshots"
            }
        }
    ],
    "tags": [
        {
            "key": "Project",
            "value": "GridTokenX"
        },
        {
            "key": "Environment",
            "value": "Research"
        }
    ]
}